<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#575656"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/rounded_layout2"
        android:textColorHint="#575656"
        android:padding="30dp">

        <EditText
            android:id="@+id/sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint=" 이메일을 입력하세요"
            android:textColorHint="#575656"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/sign_up_pwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint=" 비밀번호를 입력하세요"
            android:textColorHint="#575656"
            android:inputType="textPassword"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sign_up_pwd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint=" 비밀번호 확인                "
                android:textColorHint="#575656"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <Button
                android:id="@+id/check_pwd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_main"
                android:text="확인"
                android:textSize="15dp"
                android:textColor="#575656"/>


        </LinearLayout>

        <EditText
            android:id="@+id/sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint=" 이름"
            android:textColorHint="#575656"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/sign_up_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint=" 학번"
            android:textColorHint="#575656"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="86dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_main"
                android:text="완료"
                android:textSize="15dp"
                android:textColor="#575656"/>

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="86dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_main"
                android:text="취소"
                android:layout_marginLeft="30dp"
                android:textSize="15dp"
                android:textColor="#575656"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>