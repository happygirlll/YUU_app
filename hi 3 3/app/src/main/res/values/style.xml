<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#DFDFDF</item>
        <item name="colorPrimaryDark">#FFB3B3B3</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">false</item> <!-- 타이틀바 숨기기 -->
        <item name="windowActionBar">false</item> <!-- 액션바 숨기기 -->
        <item name="android:windowFullscreen">false</item> <!-- 상태바 보이기 -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>
    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#CCCCCC</item>
        <item name="android:textColorPrimary">@android:color/black</item>       <!-- 탭바 선택된 텍스트 -->
        <item name="android:textColorSecondary">@color/black</item>     <!-- 탭바 텍스트 -->
        <item name="colorAccent">@color/colorAccent</item>                    <!-- 하단 움직이는 바 색-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ActionBarTitle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textSize">10dp</item>
    </style>
</resources>
